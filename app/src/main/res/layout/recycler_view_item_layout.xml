<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:elevation="@dimen/elevations_card"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/text_view_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:tools="http://schemas.android.com/tools"
            android:textSize="@dimen/text_size_title_card"
            tools:text="@tools:sample/cities"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/padding_horizontal_cards"
            android:layout_marginEnd="@dimen/padding_horizontal_cards"
            android:background="@android:color/darker_gray"
            android:height="@dimen/height_title_card"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/padding_horizontal_text_card"
            android:paddingEnd="@dimen/padding_horizontal_text_card"
            />

        <TextView
            android:id="@+id/text_view_card_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:tools="http://schemas.android.com/tools"
            android:textSize="@dimen/text_size_description_card"
            tools:text="@tools:sample/cities"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/padding_horizontal_cards"
            android:layout_marginEnd="@dimen/padding_horizontal_cards"
            android:background="@android:color/holo_blue_dark"
            android:height="@dimen/height_description_card"
            android:gravity="start"
            android:paddingStart="@dimen/padding_horizontal_text_card"
            android:paddingEnd="@dimen/padding_horizontal_text_card"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>
